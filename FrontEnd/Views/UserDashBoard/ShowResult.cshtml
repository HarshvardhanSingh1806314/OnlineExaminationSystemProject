@model FrontEnd.Models.Result
@{ 
    ViewBag.Title = "ShowResult";
    var testId = ViewBag.TestId;
    var difficultyLevel = ViewBag.DifficultyLevel;
}

<div class="container mt-5">
    <div class="card shadow-lg p-4">
        <h3 class="card-title text-center mb-4">Your Result</h3>
        <div class="card-body">
            <div class="row mb-3">
                <div class="col-md-6">
                    <strong>Student Name: </strong>
                </div>
                <div class="col-md-6">
                    @Html.DisplayFor(model => model.StudentName)
                </div>
            </div>
            <div class="row mb-3">
                <div class="col-md-6">
                    <strong>Test Name: </strong>
                </div>
                <div class="col-md-6">
                    @Html.DisplayFor(model => model.TestName)
                </div>
            </div>
            <div class="row mb-3">
                <div class="col-md-6">
                    <strong>Difficulty Level: </strong>
                </div>
                <div class="col-md-6">
                    @Html.DisplayFor(model => model.DifficultyLevel)
                </div>
            </div>
            <div class="row mb-3">
                <div class="col-md-6">
                    <strong>Correct Attempts: </strong>
                </div>
                <div class="col-md-6">
                    @Html.DisplayFor(model => model.CorrectAttempts)
                </div>
            </div>
            <div class="row mb-3">
                <div class="col-md-6">
                    <strong>Total Attempts: </strong>
                </div>
                <div class="col-md-6">
                    @Html.DisplayFor(model => model.TotalAttempts)
                </div>
            </div>
            <div class="row mb-3">
                <div class="col-md-6">
                    <strong>Total Questions: </strong>
                </div>
                <div class="col-md-6">
                    @Html.DisplayFor(model => model.TotalQuestions)
                </div>
            </div>
            <div class="row mb-3">
                <div class="col-md-6">
                    <strong>Result:</strong>
                </div>
                <div class="col-md-6">
                    @Html.DisplayFor(model => model.TestResult)
                </div>
            </div>
        </div>
    </div>

    <div class="mt-4 text-center">
        <h5>Would you like to take the exam again?</h5>
        <div>
            @if(testId != null && difficultyLevel != null)
            {
                @Html.ActionLink("Proceed to next level", "ExamDisplay", "UserDashBoard", new { testId, difficultyLevel }, new { @class = "btn btn-success" });
            }
            else
            {
                @Html.ActionLink("Proceed to Dashboard", "Index", "UserDashBoard");
            }
        </div>
    </div>
</div>

<style>
    .card {
        border: 1px solid #ccc;
        border-radius: 8px;
        background-color: #f9f9f9;
    }

    .row {
        padding: 8px 0;
    }

    h5 {
        margin-top: 20px;
    }

    .btn {
        font-size: 16px;
        padding: 10px 20px;
    }
</style>

