@{ ViewBag.Title = "Card Hover Effects with Buttons"; }

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <style>
        /* General Styles */
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            background-color: #121212;
            color: white;
            text-align: center;
            height: 150vh;
            overflow: scroll;
        }

        .card-container {
            display: flex;
            justify-content: center;
            gap: 20px;
            margin-top: 50px;
        }

        .card {
            background-color: #1c1c1c;
            border-radius: 10px;
            width: 200px;
            height: 200px;
            display: flex;
            flex-direction: column;
            justify-content: space-between;
            align-items: center;
            padding: 20px;
            text-align: center;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.3);
            transition: transform 0.3s ease, box-shadow 0.3s ease;
        }

            .card:hover {
                transform: scale(1.1);
                box-shadow: 0 8px 15px rgba(0, 0, 0, 0.5);
            }

        .card-icon {
            font-size: 40px;
            color: #ff6b6b;
        }

        .card-title {
            font-size: 18px;
            font-weight: bold;
        }

        .card-description {
            font-size: 14px;
            color: #cccccc;
        }

        .card button {
            background-color: #ff6b6b;
            border: none;
            color: white;
            padding: 10px 15px;
            font-size: 14px;
            border-radius: 5px;
            cursor: pointer;
            transition: background-color 0.3s ease;
        }

            .card button:hover {
                background-color: #e64e4e;
            }
    </style>
</head>
<body>
    <br />
    <br />
    <br />
    <br />
    <h1 style="color:lightpink">Admin Dashboard</h1>
    <div class="card-container">
        <div class="card">
            
            <div class="card-title">Add Topic</div>
            <div class="card-description">Click to add the topic</div>
            <button onclick="location.href='@Url.Action("AddTopic", "Admin")'">Add</button>
        </div>
        @*<div class="card">
            
            <div class="card-title">Add Question</div>
            <div class="card-description">Click to add the question</div>
            <button onclick="location.href='@Url.Action("AddQuestion", "Admin")'">Add</button>
        </div>*@
        <div class="card">
            
            <div class="card-title">Add or Delete Question</div>
            <div class="card-description">Click to Add, Update or delete the question</div>
            <button onclick="location.href='@Url.Action("DeleteQuestion", "Admin")'">Modify Question</button>
        </div>
        <div class="card">
            
            <div class="card-title">View Reports</div>
            <div class="card-description">Click to view reports</div>
            <button onclick="location.href='@Url.Action("ViewReport", "Admin")'">View</button>
        </div>
    </div>
</body>
</html>