                @Html.EditorFor(model => model.Answer, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Answer, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.DifficultyLevel, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("DifficultyLevel", new SelectList(new List<SelectListItem> { 
                    new SelectListItem {Text = "EASY", Value = "easy"},
                    new SelectListItem {Text = "MEDIUM", Value = "medium"},
                    new SelectListItem {Text = "HARD", Value = "hard"}
                }, "Value", "Text", currentDifficultyLevel))
            </div>
        </div>

        

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
