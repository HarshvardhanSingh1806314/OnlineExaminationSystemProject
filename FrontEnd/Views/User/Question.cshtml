@model FrontEnd.Models.Questions
@{ Layout = null; // Optional, depending on your project structure
                int currentQuestion = 1;
                int totalQuestions = 10; }

<!DOCTYPE html>
<html>
<head>
    <title>Quiz Application</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            text-align: center;
            margin-top: 50px;
        }

        .quiz-container {
            border: 1px solid #000;
            padding: 20px;
            width: 400px;
            margin: auto;
        }

        .buttons {
            margin-top: 20px;
        }

        button {
            margin: 5px;
            padding: 10px 20px;
            cursor: pointer;
        }
    </style>
</head>
<body>
    <div class="quiz-container">
        <h2>Level 1</h2>
        <p>Current Question @currentQuestion/@totalQuestions</p>
        <p><strong>What is the correct syntax?</strong></p>
        <form method="post" action="/Quiz/SubmitAnswer">
            <div>
                <input type="radio" id="option1" name="selectedOption" value="option1">
                <label for="option1">Public class ABC extends PQR extends students</label>
            </div>
            <div>
                <input type="radio" id="option2" name="selectedOption" value="option2">
                <label for="option2">Int i="A";</label>
            </div>
            <div>
                <input type="radio" id="option3" name="selectedOption" value="option3">
                <label for="option3">String A="hello";</label>
            </div>
            <div>
                <input type="radio" id="option4" name="selectedOption" value="option4">
                <label for="option4">Private class ABC</label>
            </div>
            <div class="buttons">
                <button type="submit" name="action" value="Next">Next</button>
                <button type="submit" name="action" value="Finish">Finish</button>
            </div>
        </form>
    </div>
</body>
</html>
