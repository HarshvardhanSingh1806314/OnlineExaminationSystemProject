<div style="text-align: center; margin: 50px 0;">
    <div id="about" style="background-color: #f8f9fa; padding: 50px;">
        <!-- Company Name -->
        <h3 style="color: #333;">Online Exam System</h3>

        <!-- Main Heading -->
        <h1 style="font-size: 2.5rem; margin: 20px 0;">Infinite Exam Portal</h1>

        <!-- Description -->
        <p style="color: #666; font-size: 1rem; max-width: 600px; margin: 0 auto;">
            This website is helpful for students, companies or any organization to conduct any examinations from this site.
        </p>

        <!-- Learn More Button -->
        <a href="@Url.Action("About", "Home")" style="display: inline-block; margin-top: 20px; padding: 10px 20px; background-color: #007bff; color: #fff; text-decoration: none; border-radius: 5px;">
            Learn More
        </a>
    </div>

    <div id="admin" style="background-color: #343a40; color: #fff; padding: 50px;">
        <!-- Sub-heading -->
        <h2>Admin</h2>

        <!-- Description -->
        <p style="max-width: 600px; margin: 0 auto;">
            Admin can add the topics and questions and modify question.
        </p>

        <!-- Show Case Button -->
        <a href="@Url.Action("AdminPage", "Home")" style="display: inline-block; margin-top: 20px; padding: 10px 20px; background-color: #007bff; color: #fff; text-decoration: none; border-radius: 5px;">
            ADMIN
        </a>
    </div>
    <div id="user" style="background-color: #e9ecef; color: #333; padding: 50px;">
        <!-- Sub-heading -->
        <h2>User</h2>

        <!-- Description -->
        <p style="max-width: 600px; margin: 0 auto;">
            User can take exam and view reports.
        </p>

        <!-- Show Case Button -->
        <a href="@Url.Action("UserPage", "Home")" style="display: inline-block; margin-top: 20px; padding: 10px 20px; background-color: #007bff; color: #fff; text-decoration: none; border-radius: 5px;">
            User
        </a>
    </div>
</div>

